{
  "data": {
    "fish_csv": "data/final/merged/fish_mapping_merged_production.csv",
    "images_dir": "datasets/training/images",
    "img_size": 224,
    "batch_size": 16,
    "num_workers": 2
  },
  "model": {
    "type": "efficientnet_b0",
    "dropout": 0.5,
    "freeze_epochs": 2
  },
  "training": {
    "epochs": 50,
    "learning_rate": 0.0001,
    "weight_decay": 0.01,
    "patience": 10,
    "min_images_per_class": 15,
    "use_class_weights": true,
    "label_smoothing": 0.1
  },
  "augmentation": {
    "enabled": true,
    "strong_aug": true,
    "horizontal_flip": 0.5,
    "vertical_flip": 0.2,
    "rotation": 30,
    "brightness": 0.3,
    "contrast": 0.3,
    "saturation": 0.3,
    "hue": 0.1
  }
}